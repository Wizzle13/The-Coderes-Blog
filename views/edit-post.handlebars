<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div class="card border-secondary mb-3 text-bg-secondary" style="max-width: 100rem;">
        <div class="card-header">    
            <input name="post-title" type="text" value="{{post.title}}" />
        </div> 
        <div class="card-body text-secondary"> 
            <p class="card-text">
                <textarea name="post-content" id="post-content" rows="6">{{post.content}}</textarea>
            </p>
            <p class="card-text">
                by you on {{format_date post.created_at}}
                <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
            </p>
        </div>
    </div>
    <button type="submit">Save post</button>
    <button type="button" class="delete-post-btn">Delete post</button>
  </form>
</article>

<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>

{{> comments post.comments}}

<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>
<script src="/js/comment.js"></script>


